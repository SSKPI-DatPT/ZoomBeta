<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="MoreBinding">

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.inis.famo.ui.screen.fragment.more.MoreViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_50"
                android:src="@drawable/gao" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_22"
                android:textStyle="bold"
                tools:text="Pham Dat" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/text4"
                android:textSize="@dimen/sp_14"
                tools:text="anhhoang14@gmail.com" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_60"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvEmail">

                <com.inis.famo.widget.CustomItemMoreView
                    android:id="@+id/viewUpgrade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.inis.famo.widget.CustomItemMoreView
                    android:id="@+id/viewLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.inis.famo.widget.CustomItemMoreView
                    android:id="@+id/viewTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.inis.famo.widget.CustomItemMoreView
                    android:id="@+id/viewLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

    </LinearLayout>
</layout>