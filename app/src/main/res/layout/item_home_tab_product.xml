<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="com.inis.famo.data.model.ProductEntity" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dp_15"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/bg_item_hot_buy"
        app:cardCornerRadius="@dimen/dp_15"
        app:cardElevation="@dimen/dp_8">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivTabProduct"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150"
                android:background="@color/splash_loading"
                android:src="@drawable/gao"
                android:padding="@dimen/dp_10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTabProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_16"
                android:text="ST25"
                android:textColor="@color/text1"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivTabProduct" />

            <TextView
                android:id="@+id/tvTabProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="180K"
                android:textColor="@color/text1"
                android:textSize="@dimen/sp_17"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvTabProductName"
                app:layout_constraintTop_toBottomOf="@id/tvTabProductName" />

            <TextView
                android:id="@+id/tvTabSplit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:text="-"
                android:textColor="@color/text1"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/tvTabProductName"
                app:layout_constraintEnd_toStartOf="@id/tvTabProductUnit"
                app:layout_constraintStart_toEndOf="@id/tvTabProductName"
                app:layout_constraintTop_toTopOf="@id/tvTabProductName" />

            <TextView
                android:id="@+id/tvTabProductUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:text="10kg"
                android:textColor="@color/text1"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/tvTabSplit"
                app:layout_constraintStart_toEndOf="@id/tvTabSplit"
                app:layout_constraintTop_toTopOf="@id/tvTabSplit" />

            <ImageView
                android:id="@+id/iv_tab_favorites"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:padding="@dimen/dp_5"
                android:src="@drawable/ic_like"
                app:layout_constraintEnd_toEndOf="@id/ivTabProduct"
                app:layout_constraintTop_toTopOf="@id/ivTabProduct" />


            <ImageView
                android:id="@+id/ivTabAddToCart"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_marginBottom="@dimen/dp_5"
                android:padding="@dimen/dp_12"
                android:layout_marginEnd="@dimen/dp_5"
                android:src="@drawable/ic_tab_cart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>